<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Chronos</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    @if (ViewBag.Title != "Login" && ViewBag.Title != "Register")
    {
        @Html.Partial("Header", Session["UserGroups"])
    }

        <div class="container body-content">
            @if (ViewBag.Title != "Login")
            {
                @Html.Partial("CreateGroup", new Chronos.Entities.Group())
            }
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Chronos.inc</p>
            </footer>
        </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("pagescripts", required: false)
</body>
</html>