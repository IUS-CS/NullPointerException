@model Chronos.Models.GroupContentModel

<div id="members" class="tab-pane fade in">
    @using (Ajax.BeginForm("SearchUser", "User", new AjaxOptions { UpdateTargetId = "search-result", InsertionMode = InsertionMode.Replace }))
    {
        @Html.ValidationSummary()
        <div class="row">
            <div class="col-xs-1">
                <button type="submit" class="btn btn-info pull-right" >
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </div>
            <div class="form-group">
                @Html.TextBox("username", null, new { id = "username", @class = "form-control", placeholder = "Search for users to add" })
            </div>
        </div>
    }
    <div id="search-result" class="row">
        
    </div>
    <h2>Members</h2>
    @foreach (var member in @Model.Members)
    {
        <p>@member.Username</p>
    }
</div>

<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
