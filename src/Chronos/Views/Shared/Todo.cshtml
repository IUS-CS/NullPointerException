@model Chronos.Models.GroupContentModel

<div id="todo" class="tab-pane fade in">
    <h2>To Do List</h2>
    @using (Html.BeginForm())
    {


    <div class="row">
        @Html.TextBoxFor(m => m.TodoList.AddItem, new { placeholder = "Add items here!", Value = "" })
        <input type="submit" value="+" class="btn btn-success" />
        <!--<button id="add_item" class="btn btn-success"><span class="glyphicon-plus"></span></button>-->
    </div>
    }
    <ul>
        @foreach (var item in Model.TodoList.Items)
        {
            <li>@item</li>
        }
    </ul>
</div>
