@model Chronos.Models.GroupContentModel

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">Home</a></li>
        <li><a data-toggle="tab" href="#meeting_times_partial">Find Meetings</a></li>
        <li><a data-toggle="tab" href="#todo">To do</a></li>
        <li><a data-toggle="tab" href="#members">Members</a></li>
    </ul>
</div>
<div class="tab-content">

    @Html.Partial("Home", Model)
    <div id="meeting_times_partial" class="tab-pane fade in partial_contents" data-url="Calendar/FindMeetingTimes/@Model.Id">
        <p>Loading...</p>
    </div>
    @Html.Partial("Todo", Model)
    @Html.Partial("Members", Model)
</div>
<p>
    @if (Request.IsAuthenticated)
    {
        <a class="btn btn-default" href="@Url.Action("FindMeetingTimes", "Calendar")">Find Meeting Times &raquo;</a>
    }
    else
    {
        <a class="btn btn-default" href="@Url.Action("Login", "Account")">Log in &raquo;</a>
    }
</p>

